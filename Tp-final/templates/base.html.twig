<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 16 16%22><rect width=%2216%22 height=%2216%22 fill=%22%23000%22/></svg>">
        {% block stylesheets %}
            <style>
                * {
                    margin: 0;
                    padding: 0;
                    box-sizing: border-box;
                }
                body {
                    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
                    background-color: #000;
                    color: #fff;
                }
                .header {
                    background-color: #000;
                    border-bottom: 1px solid #333;
                    padding: 0.75rem 2rem;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }
                .header-right {
                    display: flex;
                    gap: 2rem;
                    align-items: center;
                }
                .header-logo {
                    position: absolute;
                    left: 50%;
                    transform: translateX(-50%);
                    height: 40px;
                }
                .header a {
                    color: #fff;
                    text-decoration: none;
                    font-size: 0.95rem;
                    font-weight: 500;
                    transition: opacity 0.2s;
                }
                .header a:hover {
                    opacity: 0.7;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <div class="header-left">
                <a href="{{ path('app_home') }}">Accueil</a>
            </div>
            <img src="https://s3.amazonaws.com/busites_www/tour-playboycarti-com/media/tour_title.png" alt="Playboi Carti Tour" class="header-logo">
            <div class="header-right">
                <a href="{{ path('app_about') }}">Qui sommes nous</a>
                <a href="{{ path('app_contact') }}">Contact</a>
                {% if app.user %}
                    <a href="{{ path('app_account') }}">Compte</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Compte</a>
                {% endif %}
            </div>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
