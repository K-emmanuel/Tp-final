{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div style="max-width: 600px; margin: 3rem auto; padding: 0 2rem;">
    <h1 style="font-size: 2.5rem; margin-bottom: 2rem; text-align: center;">Contact</h1>

    {% for message in app.flashes('success') %}
        <div style="background-color: #2d2d2d; padding: 1rem; margin-bottom: 1.5rem; border-radius: 4px; text-align: center;">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div style="background-color: #8b0000; padding: 1rem; margin-bottom: 1.5rem; border-radius: 4px; text-align: center;">
            {{ message }}
        </div>
    {% endfor %}

    <form method="POST" style="display: flex; flex-direction: column; gap: 1.5rem;">
        <div>
            <label for="name" style="display: block; margin-bottom: 0.5rem; font-size: 1rem;">Nom</label>
            <input
                type="text"
                id="name"
                name="name"
                required
                style="width: 100%; padding: 0.75rem; font-size: 1rem; background-color: #1a1a1a; border: 1px solid #333; color: white; border-radius: 4px;"
            >
        </div>

        <div>
            <label for="email" style="display: block; margin-bottom: 0.5rem; font-size: 1rem;">Email</label>
            <input
                type="email"
                id="email"
                name="email"
                required
                style="width: 100%; padding: 0.75rem; font-size: 1rem; background-color: #1a1a1a; border: 1px solid #333; color: white; border-radius: 4px;"
            >
        </div>

        <div>
            <label for="message" style="display: block; margin-bottom: 0.5rem; font-size: 1rem;">Message</label>
            <textarea
                id="message"
                name="message"
                rows="6"
                required
                style="width: 100%; padding: 0.75rem; font-size: 1rem; background-color: #1a1a1a; border: 1px solid #333; color: white; border-radius: 4px; resize: vertical; font-family: inherit;"
            ></textarea>
        </div>

        <button
            type="submit"
            style="padding: 1rem 2rem; font-size: 1.1rem; background-color: white; color: black; border: none; cursor: pointer; border-radius: 4px; font-weight: 500; transition: background-color 0.2s;"
            onmouseover="this.style.backgroundColor='#e0e0e0'"
            onmouseout="this.style.backgroundColor='white'"
        >
            Envoyer
        </button>
    </form>
</div>
{% endblock %}
